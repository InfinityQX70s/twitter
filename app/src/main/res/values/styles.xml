<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorPrimaryDark">@color/color_primary_dark</item>
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background"  tools:ignore="NewApi">@color/color_primary</item>
        <item name="background">@color/color_primary</item>
    </style>

    <style name="TwitterTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimaryDark">@color/color_primary_dark</item>
        <item name="android:windowBackground">@color/color_primary</item>
        <item name="android:colorAccent">#E6686868</item>
    </style>

    <style name="TweetStyle" parent="tw__TweetLightStyle">
        <item name="tw__container_bg_color">@color/background_color</item>
    </style>

    <style name="StyleForNickName">
        <item name="custom_font">Roboto-Medium</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="StyleForName">
        <item name="custom_font">Roboto-Bold</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="StyleForTableRowOne">
        <item name="custom_font">Roboto-Black</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="StyleForTableRowTwo">
        <item name="custom_font">Roboto-Regular</item>
        <item name="android:textColor">@color/profile_table_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">top</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/background_color</item>
    </style>

</resources>
